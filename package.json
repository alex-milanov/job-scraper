{
  "name": "job_scraper",
  "version": "0.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "prebuild": "node bin/move-assets.js",
    "build": "npm run build:js && npm run build:sass && npm run build:pug",
    "build:js": "browserify web/src/js/index.js -o web/dist/js/app.js -t [ babelify --presets [ es2015 ] ]",
    "build:sass": "node-sass --include-path=$(node bin/sass-paths.js) web/src/sass/style.sass web/dist/css/style.css",
    "build:pug": "pug --out web/dist --pretty web/src/pug/index.pug",
    "watch": "npm run watch:js & npm run watch:sass & npm run watch:pug & npm run livereload",
    "watch:js": "nodemon --watch 'web/src/js' --exec 'npm run build:js'",
    "watch:sass": "npm run build:sass -- --watch web/src/sass/**/*",
    "watch:pug": "npm run build:pug -- --watch",
    "livereload": "livereload web/dist",
    "lint": "npm run lint:server && npm run lint:web",
    "lint:server": "eslint server",
    "lint:web": "eslint web/src/js",
    "start": "npm run build && nodemon server & npm run watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.2",
    "cheerio": "^0.20.0",
    "express": "^4.14.0",
    "font-awesome": "^4.6.3",
    "method-override": "^2.3.6",
    "pug": "^2.0.0-beta3",
    "request": "^2.72.0",
    "rx-node": "^1.0.2",
    "superagent": "^2.0.0",
    "unfluff": "^1.0.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "eslint": "^3.0.1",
    "eslint-config-google": "^0.6.0",
    "fs-extra": "^0.30.0",
    "livereload": "^0.4.1",
    "node-sass": "^3.8.0",
    "nodemon": "^1.9.2",
    "pug-cli": "^1.0.0-alpha6"
  }
}
