{
  "name": "job_scraper",
  "version": "0.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "prebuild": "node bin/move-assets.js",
    "build": "npm run build:js && npm run build:sass",
    "build:js": "browserify src/js/index.js -o dist/js/app.js",
    "build:sass": "node-sass --include-path=$(node bin/sass-paths.js) src/sass/style.sass dist/css/style.css",
    "watch": "npm run watch:js & npm run watch:sass & npm run livereload",
    "watch:js": "watchify -p browserify-hmr src/js/index.js -o dist/js/app.js",
    "watch:sass": "npm run build:sass -- --watch src/sass/**/*",
    "livereload": "livereload dist/**/*.css -d",
    "start": "npm run build && nodemon server & npm run watch",
    "lint": "npm run lint:server && npm run lint:web",
    "lint:server": "eslint server",
    "lint:web": "eslint src/js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.2",
    "cheerio": "^0.20.0",
    "express": "^4.14.0",
    "font-awesome": "^4.6.3",
    "iblokz": "github:iblokz/iblokz",
    "method-override": "^2.3.6",
    "pug": "^2.0.0-beta3",
    "request": "^2.72.0",
    "rx-node": "^1.0.2",
    "snabbdom": "^0.5.4",
    "superagent": "^3.3.1",
    "unfluff": "^1.0.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "browserify-hmr": "^0.3.5",
    "eslint": "^3.0.1",
    "eslint-config-google": "^0.6.0",
    "fs-extra": "^0.30.0",
    "livereload": "^0.4.1",
    "node-sass": "^3.8.0",
    "nodemon": "^1.9.2",
    "pug-cli": "^1.0.0-alpha6",
    "watchify": "^3.8.0"
  }
}
