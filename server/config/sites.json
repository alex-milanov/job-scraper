{
	"jobs.bg" : {
		"baseUrl": "www.jobs.bg",
		"protocol": "http",
		"listingPath": "/front_job_search.php",
		"queryParam": "keyword",
		"pageParam": "frompage",
		"incStart": 0,
		"incStep": 15,
		"list": {
			"selector": "a.joblink",
			"title": [["text"]],
			"link": [["attr", "href"]]
		},
		"fields": {
			"info": {
				"type": "jquery",
				"selector": "td.jobTitleViewBold:contains('Описание')",
				"chain": [
					["next","td"],
					["text"]
				],
				"backup": "unfluff"
			},
			"salary": {
				"type": "jquery",
				"selector": "td.jobTitleViewBold:contains('Заплата')",
				"chain": [
					["next","td"],
					["text"]
				]
			}
		}
	},
	"jobtiger.bg" : {
		"baseUrl": "www.jobtiger.bg",
		"protocol": "http",
		"listingPath": "/obiavi-za-rabota/",
		"queryParam": "keyword",
		"pageParam": "_page",
		"incStart": 1,
		"incStep": 1,
		"list": {
			"selector": "div#JobsListContainer > ul > li > a",
			"title": [["find","div.Title"],["text"]],
			"link": [["attr", "href"]]
		},
		"fields": {
			"info": {
				"type": "jquery",
				"selector": ".JobContent .Description",
				"chain": [
					["text"]
				]
			}
		}
	},
	"weworkremotely.com" : {
		"baseUrl": "weworkremotely.com",
		"protocol": "https",
		"listingPath": "/jobs/search",
		"queryParam": "term",
		"pageParam": false,
		"list": {
			"selector": "section.jobs > article > ul > li > a:not(.view-all)",
			"title": [["text"]],
			"link": [["attr", "href"]]
		},
		"fields": {
			"info": {
				"type": "jquery",
				"selector": "section.job > .listing-container",
				"chain": [
					["html"]
				]
			}
		}
	}
}
